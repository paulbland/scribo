<%- include('partials/header_start'); %>
  <body class="home">
      <div class="login-page clearfix login-box">
        <h1>Scrībō</h1>
        <p>The index card app for writers.</p>
        <a href="#" class="login">Join the beta</a>
      </div>
      <small><span>Scribo</span> is lovingly made by <a href="http://automatstudio.com" target="_blank">Automat Studio</a> in Brooklyn, New York. <a href="mailto:hello@automatstudio.com">hello@automatstudio.com</a></small>
      <script src="//code.jquery.com/jquery-2.1.1.min.js"></script>
      <script src="//cdn.auth0.com/js/lock-9.1.4.min.js"></script>
      <script>
        $(function() {
          var lock = new Auth0Lock('eaXYDVkHHSLQZVtJsXArAHOGq20Yxo1l', 'scribo.auth0.com'); // CLIENT ID, API HOST
          $('.login').click(function(e) {
            e.preventDefault();
            lock.show(function(err, profile, token) {
              if (err) {
                console.log("There was an error");
              } else {
                localStorage.setItem('userToken', token);
                localStorage.setItem('userProfile', JSON.stringify(profile));
                window.location.href = "/app";
              }
            });
          });
        });
    </script>
    <%- include('partials/ga'); %>
  </body>
</html>